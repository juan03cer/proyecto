extends ./layout/app

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")
    
    
block contenido 
    div(class="py-5")
        h2(class="text-center text-4xl font-extrabold") Ubicacion de los pacientes en el mapa

        div(class="flex flex-col md:flex-row items-center py-10 gap-4") 
            h2(class="text-sm uppercase text-gray-800 font-bold") Filtrar Campa単as:

            div(class="w-full  md:w-auto flex items-center gap-2")
                label(for="campaign" class="text-sm w-24 uppercase text-gray-500 font-bold") Campa単as 
                select(id="campaign" class="flex-1 bg-white w-full px-3 py-2 border border-gray-300 rounded-sm shadow") 
                    option(value="") -Selecione la campa単a- 
                    each campaigns in campaign 
                        option(value=campaigns.id)=campaigns.nombre 
            


        div(id="mapa-inicio" class="h-[600px] mt-5")

        section(class="py-5")
            h2(class="text-center text-4xl font-extrabold pt-10") Pacientes
            
            div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-14")
                each pacientes in paciente 
                    div(class="bg-white shadow rounded-lg")
                        img(class="object-cover h-72 w-full" src=`/uploads/${pacientes.imagen}` alt=`Imagen paciente ${pacientes.nombre}`)
                        div(class="p-5 space-y-3")
                            h3(class="text-2xl font-bold")=pacientes.nombre
                            p(class="text-sm text-gray-600") Campa単a en la que se conocio al paciente: 
                                span(class="text-gray-800 font-bold")=pacientes.campaign.nombre
                            a(href=`/pacientes/${pacientes.id}` class="bg-indigo-600 w-full text-center block font-bold text-white p-2 uppercase rounded") Ver paciente 


block scripts
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="/js/mapaInicio.js") 
