extends ../layout/admin

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")
    
    

block contenido
     div.py-10 
         h1.text-4xl.my-10.font-extrabold.text-center  FSFLMX
            span.font-normal  Sin Sordera
         h2.text-center.text-2xl.font-extrabold= pagina

         if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores 
                   p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg


         div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
              form.space-y-8(method="POST" action="/admin/campaing")
                input(type="hidden" name="_csrf" value = csrfToken)
                div.space-y-5
                    h3.text-lg.leading-6.font-medium.text-gray-900 Crea una campaña 
                    p.text-gray-600 Añade Informacion sobre la campaña
                   
                    div
                         label.block.text-sm.uppercase.text-gray-400.mb-2.fond-bold(for="nombre") Nombre de la campaña
                         input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Nombre de la campaña" type="text" name="nombre" value= datos ? datos.nombre : '' )        
                            

                    input(class="w-full py-3 bg-indigo-600 hover:bg-indigos-700 rounded text-white font-bold uppercase cursor-pointer" type="submit" value="Crear Campaña")

block scripts
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="https://unpkg.com/esri-leaflet@3.0.8/dist/esri-leaflet.js")
    script(src="https://unpkg.com/esri-leaflet-geocoder@2.2.13/dist/esri-leaflet-geocoder.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-geosearch/2.7.0/bundle.min.js")
    script(src="/js/mapa.js")                                                             